CFLAGS	=	-Wall -Wextra -Werror
CC		=	c++

SRC		=	Account.cpp tests.cpp
OBJ		=	$(SRC:.cpp = .o)
NAME	=	account

all:	$(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJS)

fclean:	clean
	$(RM) $(NAME)

re:	fclean $(NAME)